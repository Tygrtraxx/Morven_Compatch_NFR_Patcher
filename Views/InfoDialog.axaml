<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="Morven_Compatch_NFR_Patcher.Views.InfoDialog"
        Title="Information"
		Icon="/Assets/images/information.png"
        Width="400" Height="200"
        WindowStartupLocation="CenterOwner">
	<Grid Margin="10">
		<Grid.RowDefinitions>
			<RowDefinition Height="*"/>
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>
		<!-- Explanatory text -->
		<TextBlock TextWrapping="Wrap"
				   Text="This is your explanation text. Provide any helpful details here so the user knows what to do."
				   VerticalAlignment="Center"/>
		<!-- OK Button -->
		<Button Grid.Row="1" Content="OK" HorizontalAlignment="Right" Margin="0,10,0,0" Click="OkButton_Click"/>
	</Grid>
</Window>
