<!--
    App.axaml
    
    Line 8: Sets the default XML namespace to Avalonia UI.
    Line 9: Provides XAML language constructs (e.g. x:Class, x:Name).
    Line 10: Links this XAML file to the code-behind class (App) in the specified namespace.
    Line 11: Specifies the theme variant for the application. "Default" means it follows the system theme; "Dark" or "Light"; can be set explicitly if desired.
-->
<Application
    x:Class="Morven_Compatch_NFR_Patcher.App"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    RequestedThemeVariant="Default">

    <!--  Application.Styles: Define the visual styling for the application.  -->
    <Application.Styles>

        <!--  FluentTheme: Applies the Fluent UI theme to the application.  -->
        <FluentTheme />

    </Application.Styles>
</Application>
